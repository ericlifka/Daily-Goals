<div class="title-bar">
    {{today}}
</div>

{{#unless hasGoals}}

    <div class="goal-section none">
        <div class="title">
            You don't have any goals yet
            {{#link-to "new" class="nav-link forward"}}New{{/link-to}}
        </div>
    </div>

{{else}}

    {{#if hasDailyGoals}}
        <div class="goal-section day">
            <div class="title">
                Today's Goals
                {{#link-to "new" class="nav-link forward"}}New{{/link-to}}
            </div>

            {{#each goal in todaysGoals}}
                {{render "goal" goal}}
            {{/each}}
        </div>
    {{/if}}

    {{#if hasWeeklyGoals}}
        <div class="goal-section week">
            <div class="title">This Week's Goals</div>

            {{#each goal in thisWeeksGoals}}
                {{render "goal" goal}}
            {{/each}}
        </div>
    {{/if}}

    {{#if hasMonthlyGoals}}
        <div class="goal-section month">
            <div class="title">This Month's Goals</div>

            {{#each goal in thisMonthsGoals}}
                {{render "goal" goal}}
            {{/each}}
        </div>
    {{/if}}

    <div class="footer-links">
        {{#link-to "manage" class="nav-link backward"}}Manage Data{{/link-to}}
        <a class="nav-link forward" href="mailto:eric.lifka@gmail.com?Subject=Daily%20Goals%20Feedback">Send Feedback</a>
    </div>

{{/unless}}
